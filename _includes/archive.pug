extends layout
block content
  .container

    != content

    - postList = (postList) ? collections[postList] : collections.posts

    ul
      each post in postList
        if (post.data)
          li
            span.postDate= global.dateReadableShort(post.date)
            = ' '
            span.postTitle
              if post.data && post.data.externalLink
                a(href=post.data.externalLink, target="_blank")= post.data.title
              else
                a(href=post.url)= post.data.title
